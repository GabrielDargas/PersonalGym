<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/container_edit_text"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools">


            <TextView
                android:id="@+id/tvNomeExercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="NomeExercicio"
               />

            <TextView
                android:id="@+id/tvNumeroSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="NumeroSeries"/>

            <TextView
                android:id="@+id/tvNumeroRepeticoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="NumeroRepeticoes"
                />

</LinearLayout>