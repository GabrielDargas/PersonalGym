<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.exercicio.ExercicioFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_firedb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/exercicios_list_user" />


    <Button
        android:id="@+id/btcadastrarNovoExercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_criarnovo"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>