<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

   <TextView
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       android:text="@string/app_name"
       android:textColor="@color/primaryTextColor"
       android:textSize="32sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="MissingConstraints" />

   <TextView
       android:id="@+id/welcomeMsg"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="@string/tv_welcome_msg"
       android:textAppearance="@style/TextAppearance.AppCompat.Display1"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView" />

   <Button
       android:id="@+id/btListar1"
       style="@style/button"
       android:layout_width="match_parent"
       android:layout_marginTop="24dp"
       android:text="@string/button_list_one"
       app:layout_constraintTop_toBottomOf="@+id/btListarAll"
       tools:layout_editor_absoluteX="16dp" />

   <Button
       android:id="@+id/btListarAll"
       style="@style/button"
       android:layout_width="match_parent"
       android:text="@string/button_list_all"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/welcomeMsg"
       tools:layout_editor_absoluteX="-127dp" />

   <Button
       android:id="@+id/btcadastrarNovoExercicio"
       style="@style/button"
       android:layout_width="match_parent"
       android:layout_marginTop="24dp"
       android:text="@string/button_criarnovo"
       app:layout_constraintTop_toBottomOf="@+id/btListar1"
       tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>